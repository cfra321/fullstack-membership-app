# ========================================
# Fullstack Membership App - Environment Variables
# ========================================
# Copy this file to .env and fill in the values
# NEVER commit .env files with real credentials

# ========================================
# Server Configuration
# ========================================
PORT=3001
NODE_ENV=development

# ========================================
# Frontend URL (for CORS and redirects)
# ========================================
FRONTEND_URL=http://localhost:3000

# ========================================
# Firebase Admin SDK
# ========================================
# Get these from Firebase Console > Project Settings > Service Accounts
# Download the JSON key file and extract these values
FIREBASE_PROJECT_ID=fullstack-membership-app
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-fbsvc@fullstack-membership-app.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"

# ========================================
# Google OAuth
# ========================================
# Get these from Google Cloud Console > APIs & Services > Credentials
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3001/api/auth/google/callback

# ========================================
# Facebook OAuth
# ========================================
# Get these from Facebook Developers > Your App > Settings > Basic
FACEBOOK_APP_ID=your-facebook-app-id

FACEBOOK_APP_SECRET=your-facebook-app-secret
FACEBOOK_CALLBACK_URL=http://localhost:3001/api/auth/facebook/callback

# ========================================
# Session Configuration
# ========================================
# Generate a secure random string (min 32 characters)
# Use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=your-session-secret-minimum-32-characters-long
SESSION_MAX_AGE=604800000

# ========================================
# Frontend Environment Variables
# ========================================
# For apps/web/.env.local
NEXT_PUBLIC_API_URL=http://localhost:3001
